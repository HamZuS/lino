<mvc:View
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   controllerName="sap.ui.demo.wt.controller.AllTickets"
>
   <List
           id="invoiceList"
      headerText="{AllTickets>/title}"
      class="sapUiResponsiveMargin"
      width="auto"
      items="{AllTickets>/rows}" >
      <headerToolbar>
         <Toolbar>
            <Title text="{i18n>invoiceListTitle}"/>
            <ToolbarSpacer/>
            <SearchField width="50%" search="onFilterInvoices" selectOnFocus="false"/>
         </Toolbar>
      </headerToolbar>
      <items>
         <ObjectListItem
                 title="{AllTickets>summary}"
                 icon="sap-icon://hello-world"
                 intro="{AllTickets>site}"
                 text="text"
                 number="{AllTickets>created}"
         >
            <firstStatus>
               <ObjectStatus
                       title="Priority"
                       text="{AllTickets>priority}"
                       state="{= ${AllTickets>priority} === 'Normal' ? 'Success' : 'Error'}"
               />
            </firstStatus>
         </ObjectListItem>
         <!--Removing the / from the path takes from the root, without it it is the item defined in <list items=...>-->

      </items>
   </List>
</mvc:View>