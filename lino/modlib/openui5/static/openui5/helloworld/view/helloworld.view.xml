<mvc:View
	controllerName="sap.ui.demo.wt.helloworld.controller.helloworld"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
   <App>
      <pages>
         <Page title="Hello World">
            <content>
               <Panel
                  headerText="Hello World Panel"
				  class="sapUiResponsiveMargin"
				  width="auto">
                  <content>
					<Button
						text="Say Hello"
						press="onShowHello"
						class="sapUiSmallMarginEnd" />
					<Input
						value="{/recipient/name}"
						valueLiveUpdate="true"
						width="60%" />
					  <Text
						  text="Hello {/recipient/name}"
						  class="sapUiSmallMargin"/>
				  </content>
               </Panel>
            </content>
         </Page>
      </pages>
   </App>
</mvc:View>
