<table:Column
        {# id="{{c.field.name}}" #}
        {% if c.width %}
        width="{{c.width}}ch"
        {% endif %}
        {% if c.sortable %}
        sortProperty="{{c.field.name}}"
        showSortMenuEntry="true"
        {% endif %}
        {#
        filterProperty="{{c.field.name}}"
        showFilterMenuEntry="true"
        #}

        visible="{{bool2js(not c.hidden)}}"
>
    {# The FieldElemnt for columns is var "c" #}
    <Label text="{{c.label}}"/>
    <table:template>
    {% block column_template %}
        <m:Text text="{{bind(c.fields_index)}}" wrapping="false"/>
    {% endblock %}

    </table:template>
</table:Column>
