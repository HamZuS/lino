{% extends "openui5/view/mvcView.xml" %}

        {% block view_controller_name %}lino.controller.table{% endblock %}
        {% block view_attributes %}    class="sapUiSizeCompact" height="100%" {% endblock %}
        {% block view_content %}
<Page
        showHeader="true"
        showNavButton="true"
        navButtonPress="onNavBack"
        showFooter="true"
        enableScrolling="true"
        class="sapUiContentPadding">
    <content>
        <Table
                id="MAIN_TABLE"
                customData:PK="{# actor.model._meta.pk.name} #}{{pk_index}}"
                customData:actor_id="{{actor.actor_id}}"
                customData:url="/restful/{{actor.app_label}}/{{actor.__name__}}"
                selectionMode="MultiToggle"
                rows="{/rows}"
                visibleRowCountMode="Auto"
                showColumnVisibilityMenu="true"
                enableColumnFreeze="{ui>/showFreezeMenuEntry}"
                enableCellFilter="{ui>/enableCellFilter}"
                columnSelect="onColumnSelect"
                cellContextmenu="onProductIdCellContextMenu"
                ariaLabelledBy="title"
                class="sapUiSizeCondensed"
                rowActionCount="1">
            <extension>
                <Toolbar>
                    <Title text="{{title}}"/>
                    {% for ba in ar.actor.get_toolbar_actions(ar.bound_action.action) %}
                    <Button
                            text="{{ba.action.label}}"
                            press="onPressAction">
                        <customData>
                            <core:CustomData
                                    key="action_name"
                                    value="{{ba.action.label}}"/>
                        </customData>
                    </Button>
                    {% endfor %}
                    <ToolbarSpacer/>

                    {% block pageinator %}
                    <Button icon="sap-icon://close-command-field"
                            tooltip="First page"
                            press="onFirstPress"/>
                    <Button icon="sap-icon://navigation-left-arrow"
                            tooltip="Previous page"

                            press="onPrevPress"
                    />
                    <Input
                            value="{meta>/page}"
                            width="4ch"
                            fieldWidth="60%"
                            align="center"
                            liveChange="onPagerInputChange"/>
                    <Label text="of {meta>/page_total}"
                    />
                    <Button icon="sap-icon://navigation-right-arrow"
                            tooltip="Next page"
                            press="onNextPress"
                    />
                    <Button icon="sap-icon://open-command-field"
                            tooltip="Last page"
                            press="onLastPress"
                    />
                    {% endblock %}
                    <ToolbarSpacer/>
                    <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search="onSearch"
                            width="auto">
                    </SearchField>
                    <ToggleButton
                            icon="sap-icon://resize-horizontal"
                            tooltip="Enable / Disable Freezing Menu Entries"
                            pressed="{ui>/showFreezeMenuEntry}"/>
                    <ToggleButton
                            icon="sap-icon://grid"
                            tooltip="Enable / Disable Cell Filter"
                            pressed="{ui>/enableCellFilter}"/>

                </Toolbar>
            </extension>
            <columns press="onPress">
                {% for c in columns %}
                {% with %}
                {% set c_loop = loop %}
                {% include c.oui5_column_template %}
                {% endwith %}
                {% endfor %}
                {#
                <Column
                        id="name"
                        width="11rem"
                        sortProperty="Name"
                        filterProperty="Name"
                        showFilterMenuEntry="true"
                        showSortMenuEntry="true">
                    <Label text="Product Name"/>
                    <template>
                        <Text text="{Name}" wrapping="false"/>
                    </template>
                </Column>
                <Column
                        id="productId"
                        filterProperty="ProductId"
                        sortProperty="ProductId"
                        width="11rem">
                    <Label text="Product Id"/>
                    <template>
                        <Text text="{ProductId}" wrapping="false"/>
                    </template>
                </Column>
                <Column
                        id="image"
                        width="9rem"
                        columnMenuOpen="onColumnMenuOpen">
                    <Label text="Image"/>
                    <template>
                        <Link text="Show Image" href="{ProductPicUrl}" target="_blank"/>
                    </template>
                </Column>
                <Column
                        id="quantity"
                        width="6rem"
                        hAlign="End"
                        sortProperty="Quantity">
                    <Label text="Quantity"/>
                    <template>
                        <Label text="{
								path: 'Quantity',
								type: 'sap.ui.model.type.Integer'
							}"/>
                    </template>
                    <menu>
                        <u:Menu ariaLabelledBy="quantity">
                            <u:items>
                                <u:MenuItem
                                        text="My custom menu entry"
                                        select="onQuantityCustomItemSelect"
                                />
                                <u:MenuItem
                                        text="Sort"
                                        select="onQuantitySort"
                                        icon="sap-icon://sort"
                                />
                            </u:items>
                        </u:Menu>
                    </menu>
                </Column>
                <Column width="9rem">
                    <Label text="Delivery Date"/>
                    <template>
                        <Text text="{
								path: 'DeliveryDate',
								type: 'sap.ui.model.type.Date',
								formatOptions: {source: {pattern: 'timestamp'}}
							}" wrapping="false"/>
                    </template>
                </Column>
                #}
            </columns>
            <footer>
                <Toolbar>
                    <ToolbarSpacer/>
                    <Button
                            icon="sap-icon://hint"
                            tooltip="Show information"
                            press="showInfo"/>
                </Toolbar>
            </footer>
        </Table>
    </content>
</Page>
        {% endblock %}